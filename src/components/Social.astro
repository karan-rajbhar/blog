---
const { platform, username } = Astro.props;
const iconMap: any = {
  github: {
    url: "/images/github.svg",
  },
  twitter: {
    url: "/images/twitter_x.svg",
  },
};
---

<a href={`https://www.${platform}.com/${username}`} target="_blank"
  ><img src={iconMap[platform].url} /></a
>

<style>
  a {
    text-decoration: none;
  }
  img{
  height: 18px;
}
</style>
