---
import { DateTime } from "luxon";
const { title, url, pubDate } = Astro.props;

const publishDateFormatted = DateTime.fromJSDate(pubDate).toFormat('MMMM dd, yyyy')

---

<div class="article-overview">
    <a href={url} class="article-title">{title}</a>
    <span class="article-date">{publishDateFormatted}</span>
<div>


<style>
.article-overview{
    display:flex;
    flex-direction:column;
    flex-shrink: 0;
    justify-content:space-evenly;
    gap:8px;
}
.article-title{

font-family: Jost*;
font-size: 18px;
font-style: normal;
font-weight: 500;
line-height: normal;
text-decoration:none;
color: inherit;
}

.article-date{
color: var(--rw-blue-50, #5E8CA7);
font-family: Jost*;
font-size: 12px;
font-style: normal;
font-weight: 400;
line-height: normal;

}
</style>